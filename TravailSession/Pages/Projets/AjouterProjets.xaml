<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailSession.Pages.Projets.AjouterProjets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailSession.Pages.Projets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="btPecedent" Click="btPecedent_Click" Grid.Row="0">Pécédent</Button>
        <Grid x:Name="gridRacine"/>
        <StackPanel Grid.Row="1" Padding="0 20 0 0">

            <StackPanel>
                <TextBlock x:Name="tblNumeroProjet" FontSize="30" FontWeight="Bold" FontFamily="Times New Roman" Text="Créer un projets"/>
                <TextBox x:Name="tbxTitre" FontSize="18" FontWeight="Bold" Header="Titre:"/>
                <TextBlock x:Name="tblErreurTitre"/>
            </StackPanel>

            <StackPanel>
                <ComboBox x:Name="cbxStatut" SelectedIndex="0" Header="Statut : "/>
                <CalendarDatePicker
                    x:Name="calendarDatePkrDateDebut"
                    DateFormat="{}{day.integer} {month.full} {year.full}"
                    Header="Date de debut: "
                    />
                    <TextBlock x:Name="tblErreurDateDebut"/>
                    <NumberBox x:Name="nbxBudget" Header="Budget :"/>
                    <TextBlock x:Name="tblErreurBudget"/>
                    <NumberBox x:Name="nbxNombreEmployesRequis" Header="Nombre d'employes requis: "/>
                    <TextBlock x:Name="tblErreurNombreEmployesRequis"/>
                    <NumberBox x:Name="nbxIdentifant" Header="Identifant clients: "/>
                    <TextBlock x:Name="tblErreurIdentifant"/>
                </StackPanel>

                <TextBox x:Name="tbxDescription" Header="Description: "/>
            <TextBlock x:Name="tblErreurDescription"/>
        </StackPanel>
        <Button x:Name="btnEnregister" Click="btnEnregister_Click" Grid.Row="2">Enregister</Button>
    </Grid>
</Page>
